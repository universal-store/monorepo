{
	"name": "@universal-store/monorepo",
	"description": "Universal Store - Built with React Native, TypeScript, Apollo & GraphQL",
	"version": "0.0.1",
	"license": "UNLICENSED",
	"private": true,
	"workspaces": {
		"packages": [
			"app",
			"server",
			"database"
		]
	},
	"scripts": {
		"postinstall": "./scripts/postinstall.sh",
		"lint:fix": "eslint . --ext .ts,.tsx --fix",
		"lint:staged": "lint-staged",
		"prettier": "prettier --write '*.{ts,tsx}'",
		"start:database": "docker-compose -f docker-compose.yml up postgres"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "1.17.8",
		"@graphql-codegen/fragment-matcher": "^1.17.8",
		"@graphql-codegen/introspection": "1.17.8",
		"@graphql-codegen/typescript": "1.17.8",
		"@graphql-codegen/typescript-graphql-files-modules": "^1.17.8",
		"@graphql-codegen/typescript-operations": "1.17.8",
		"@graphql-codegen/typescript-react-apollo": "1.16.3",
		"@react-native-community/eslint-config": "^2.0.0",
		"@types/node": "^14.6.0",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"eslint": "^7.7.0",
		"eslint-plugin-react": "^7.20.6",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"ts-node": "^8.10.2",
		"ts-node-dev": "^1.0.0-pre.58",
		"typescript": "^3.9.7"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"yarn lint:fix",
			"prettier --write",
			"git add"
		],
		"src/*.{ts,tsx}": [
			"eslint --fix"
		]
	}
}
