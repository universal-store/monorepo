{
	"name": "@universal-store/app",
	"description": "Universal Store - Built with React Native, TypeScript, Apollo & GraphQL",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"install:ios": "pod-install ios",
		"android": "react-native run-android --no-packager",
		"ios": "react-native run-ios --no-packager",
		"ios:xcode": "xed ios",
		"start": "react-native start",
		"start:reset-cache": "react-native start --reset-cache",
		"test": "jest",
		"typecheck": "tsc --noEmit",
		"lint": "eslint . --ext .ts,.tsx",
		"lint:fix": "eslint . --ext .ts,.tsx --fix",
		"lint:staged": "lint-staged",
		"prettier": "prettier --write '*.{ts,tsx}'",
		"rn:link": "react-native link",
		"generate": "graphql-codegen --config codegen.yml",
		"start:database": "docker-compose -f docker-compose.yml up postgres",
		"start:server": "source database/.env && GENERATE_ARTIFACTS=true ts-node-dev --no-notify --respawn --transpile-only ./server/src/server"
	},
	"dependencies": {
		"@apollo/client": "^3.0.0-beta.32",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.5",
		"@nexus/schema": "^0.15.0",
		"@react-native-community/async-storage": "^1.7.1",
		"@react-native-community/masked-view": "^0.1.6",
		"@react-navigation/bottom-tabs": "^5.8.0",
		"@react-navigation/native": "^5.7.3",
		"@react-navigation/stack": "^5.9.0",
		"apollo-server": "^2.16.1",
		"babel-plugin-module-resolver": "^4.0.0",
		"graphql": "^15.3.0",
		"nexus-plugin-prisma": "^0.17.0",
		"react": "16.13.1",
		"react-native": "^0.63.2",
		"react-native-gesture-handler": "^1.5.6",
		"react-native-reanimated": "^1.7.0",
		"react-native-safe-area-context": "^3.1.4",
		"react-native-screens": "^2.0.0-beta.1",
		"styled-components": "^5.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.11.1",
		"@babel/runtime": "^7.11.2",
		"@graphql-codegen/cli": "1.17.8",
		"@graphql-codegen/fragment-matcher": "^1.17.8",
		"@graphql-codegen/introspection": "1.17.8",
		"@graphql-codegen/typescript": "1.17.8",
		"@graphql-codegen/typescript-graphql-files-modules": "^1.17.8",
		"@graphql-codegen/typescript-operations": "1.17.8",
		"@graphql-codegen/typescript-react-apollo": "1.16.3",
		"@react-native-community/eslint-config": "^2.0.0",
		"@types/jest": "^26.0.10",
		"@types/node": "^14.6.0",
		"@types/react-native": "^0.63.8",
		"@types/react-test-renderer": "16.9.3",
		"@types/styled-components": "^5.1.2",
		"@typescript-eslint/eslint-plugin": "^3.9.1",
		"@typescript-eslint/parser": "^3.9.1",
		"babel-jest": "^26.3.0",
		"eslint": "^7.7.0",
		"eslint-plugin-react": "^7.20.6",
		"husky": "^4.2.5",
		"jest": "^26.4.0",
		"lint-staged": "^10.2.11",
		"metro-react-native-babel-preset": "^0.62.0",
		"pod-install": "^0.1.10",
		"prettier": "^2.0.5",
		"react-test-renderer": "16.13.1",
		"ts-node": "^8.10.2",
		"ts-node-dev": "^1.0.0-pre.58",
		"typescript": "^3.9.7"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"yarn lint:fix",
			"prettier --write",
			"git add"
		],
		"src/*.{ts,tsx}": [
			"eslint --fix"
		]
	},
	"jest": {
		"preset": "react-native",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	}
}
